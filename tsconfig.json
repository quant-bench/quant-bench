{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6"
    },
    "typeRoots": [
        "./node_modules/@types"
    ],
    "types": [
        "node",
        "jest"
    ],
    "exclude": [
        "node_modules",
        "**/*-spec.ts"
    ],
    "include": [
        "src/**/*"
    ]
}